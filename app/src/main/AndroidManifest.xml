            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize">

        </activity>
        <activity
            android:name="com.gofitapp.DietActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize">

        </activity>
        <activity
            android:name="com.gofitapp.DietMain"
            android:label="Diet"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboardHidden|orientation|screenSize">

        </activity>
    </application>

