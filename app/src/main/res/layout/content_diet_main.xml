<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gofitapp.DietMain"
    tools:showIn="@layout/app_bar_diet_main">

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/button1"
        android:background="@drawable/breakfast1"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />
    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/button2"
        android:background="@drawable/lunch2"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/dinner1"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/button4"
        android:background="@drawable/supplements1"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
